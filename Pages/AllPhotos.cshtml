@page
@model AllPhotosModel
@inject Services.IImageService ImageService

<section class="all-dyed" id="dyed">
    <div class="all-content">
        <div class="all-main">
            <h3 class="all-header">Фарбування</h3>
        </div>
        <div class="all-photos">
            @foreach (var image in ImageService.GetVisibleDyedImages())
            {
                <img src="@image.URL" alt="@image.Name" class="all-ph main-width">
            }
        </div>
    </div>
</section>

<section class="all-cut" id="cut">
